<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.StartedScreen">

    <ImageView
        android:id="@+id/imageLogoApp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tvStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Ăn Khắp Nơi, Chơi Khắp Chốn"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/imageLogoApp"
        app:layout_constraintStart_toStartOf="@id/imageLogoApp"
        app:layout_constraintTop_toBottomOf="@id/imageLogoApp"
        app:layout_constraintVertical_bias="0.01" />

    <LinearLayout
        android:id="@+id/lyIconApp"
        app:layout_constraintVertical_bias="0.8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvStarted">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/drink"
            app:civ_border_color="@color/orange"
            app:civ_border_width="1dp" />
        <Space
            android:layout_width="10dp"
            android:layout_height="30dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_riviu"
            app:civ_border_color="@color/orange"
            app:civ_border_width="1dp" />
    </LinearLayout>
    <TextView
        app:layout_constraintVertical_bias="0.08"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-thin"
        android:text="App chính thức của Địa Điểm Ăn Uống, Thánh Riviu"
        app:layout_constraintTop_toBottomOf="@id/lyIconApp"
        app:layout_constraintEnd_toEndOf="@id/lyIconApp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/lyIconApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>